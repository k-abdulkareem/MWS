@model MWS_SocialNetwork.ViewModels.CreateGroupModel

<form role="form"  enctype="multipart/form-data"  method="post" asp-action="Create">
    <div class="row">
        <div class="col-md-6">

            <div class="box box-default">

                <div class="box-body">
                    <div class="form-group">
                        <label for="inputGroupName">Group Name</label>
                        <input asp-for="Name" type="text" class="form-control"  placeholder="Exciting One!!">
                    </div>
                    <div class="form-group">
                        @*<label asp-for="Image" class="btn btn-primary btn-block">Group Photo</label>
                        <input asp-for="Image" class="btn btn-primary btn-block" style="visibility:hidden">*@
                        <div style="width:50%">
                       
                        <input asp-for="Image" class="btn  btn-block"  id="GroupPhoto">
                         </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-danger" id="CreateGroup">Create</button>
                </div>

            </div>
        </div>
        <div class="col-md-6">
            <div class="box box-default">

                <div class="box-body">
                    <div class="form-group">
                        <label for="inviteContacts">Invite Contacts to join this Group</label>
                        <select asp-for="SelectedValues" id="inviteContacts" class="form-control select2" multiple="multiple" data-placeholder="Select Contact" style="width: 100%;">
                            @if (Model.MyContacts != null)
                            {
                                foreach (var item in Model.MyContacts)
                                {
                                    <option value="@item.Id">@item.FullName</option>
                                }
                            }
                        </select>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</form>